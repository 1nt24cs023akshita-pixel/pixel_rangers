# EcoFinds Environment Configuration
# Copy this file to .env and fill in your values

# Django Settings
SECRET_KEY=your-super-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Database Configuration
DATABASE_URL=postgresql://ecofinds:password@localhost:5432/ecofinds
POSTGRES_PASSWORD=your-postgres-password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@ecofinds.com

# AWS S3 Configuration (for file storage)
USE_S3=True
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=ecofinds-media
AWS_S3_REGION_NAME=us-east-1

# AI Services API Keys
AI_IMAGE_DETECTION_API_KEY=your-ai-image-detection-key
AI_ABUSE_DETECTION_API_KEY=your-ai-abuse-detection-key
AI_PRICING_API_KEY=your-ai-pricing-key

# Translation Services
GOOGLE_TRANSLATE_API_KEY=your-google-translate-key
MICROSOFT_TRANSLATE_API_KEY=your-microsoft-translate-key

# Monitoring
GRAFANA_PASSWORD=your-grafana-password

# Social Authentication (Optional)
GOOGLE_OAUTH2_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH2_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Payment Processing (Optional)
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key

# Push Notifications (Optional)
FCM_SERVER_KEY=your-fcm-server-key

